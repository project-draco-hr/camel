{
  String[] answer=null;
  if (mailMessage != null) {
    try {
      answer=mailMessage.getHeader(name);
    }
 catch (    MessagingException e) {
      throw new MessageHeaderAccessException(name,e);
    }
  }
  if (answer == null) {
    return super.getHeader(name);
  }
  if (answer.length == 1) {
    return answer[0];
  }
  return answer;
}
