{
  String answer;
  String name=exchange.getIn().getHeader(NewFileComponent.HEADER_FILE_NAME,String.class);
  Expression expression=endpoint.getFileExpression();
  if (name != null) {
    if (name.indexOf("${") > -1) {
      if (log.isDebugEnabled()) {
        log.debug(NewFileComponent.HEADER_FILE_NAME + " contains a FileLanguage expression: " + name);
      }
      expression=FileLanguage.file(name);
    }
  }
  if (expression != null) {
    if (log.isDebugEnabled()) {
      log.debug("Filename evaluated as expression: " + expression);
    }
    name=expression.evaluate(exchange,String.class);
  }
  String endpointFile=endpoint.getConfiguration().getFile();
  if (endpoint.isDirectory()) {
    String baseDir="";
    if (endpointFile.length() > 0) {
      baseDir=endpointFile + (endpointFile.endsWith(File.separator) ? "" : File.separator);
    }
    if (name != null) {
      answer=baseDir + name;
    }
 else {
      answer=baseDir + endpoint.getGeneratedFileName(exchange.getIn());
    }
  }
 else {
    answer=endpointFile;
  }
  answer=FileUtil.normalizePath(answer);
  return answer;
}
