{
  return new RouteBuilder(){
    @Override public void configure() throws Exception {
      RoutePolicy policy=new MetricsRoutePolicy();
      from("seda:foo").routeId("foo").routePolicy(policy).delayer(100).to("mock:result");
      from("seda:bar").routeId("bar").routePolicy(policy).delayer(250).to("mock:result");
    }
  }
;
}
