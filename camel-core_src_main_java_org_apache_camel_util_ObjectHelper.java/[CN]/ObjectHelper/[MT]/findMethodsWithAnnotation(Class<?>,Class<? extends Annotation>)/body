{
  List<Method> answer=new ArrayList<Method>();
  do {
    Method[] methods=type.getDeclaredMethods();
    for (    Method method : methods) {
      if (method.getAnnotation(annotationType) != null) {
        answer.add(method);
      }
    }
    type=type.getSuperclass();
  }
 while (type != null);
  return answer;
}
