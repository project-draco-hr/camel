{
  for (Class toSuperClass=toType.getSuperclass(); toSuperClass != null && !toSuperClass.equals(Object.class); toSuperClass=toSuperClass.getSuperclass()) {
    TypeConverter converter=getTypeConverter(toSuperClass,fromType);
    if (converter != null) {
