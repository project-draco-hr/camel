{
  InputStream in=new BufferedInputStream(new FileInputStream(file));
  if (ciphers != null) {
    in=new CipherInputStream(in,ciphers.getDecryptor()){
      boolean closed;
      public void close() throws IOException {
        if (!closed) {
          super.close();
          closed=true;
        }
      }
    }
;
  }
  return in;
}
