{
  return new RouteBuilder(){
    @Override public void configure() throws Exception {
      port1=getPort();
      port2=getNextPort();
      from("jetty:http://0.0.0.0:" + port1 + "/foo bar?matchOnUriPrefix=true").to("jetty:http://0.0.0.0:" + port2 + "/proxy bar?bridgeEndpoint=true&throwExceptionOnFailure=false");
      from("jetty:http://0.0.0.0:" + port2 + "/proxy bar?matchOnUriPrefix=true").transform().simple("Bye ${body}");
    }
  }
;
}
