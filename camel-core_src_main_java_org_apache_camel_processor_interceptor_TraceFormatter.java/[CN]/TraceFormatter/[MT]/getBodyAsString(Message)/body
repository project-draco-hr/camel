{
  Object newBody=null;
  InputStreamCache cache=null;
  if (in.getBody() instanceof InputStream) {
    newBody=in.getBody(StreamCache.class);
    if (newBody != null) {
      cache=(InputStreamCache)newBody;
      in.setBody(cache);
    }
  }
  Object answer=in.getBody(String.class);
  if (answer == null) {
    answer=in.getBody();
  }
  if (cache != null) {
    cache.reset();
  }
  return answer;
}
