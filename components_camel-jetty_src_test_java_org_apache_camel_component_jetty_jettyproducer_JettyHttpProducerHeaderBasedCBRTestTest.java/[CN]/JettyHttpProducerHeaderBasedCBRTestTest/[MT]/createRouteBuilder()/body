{
  return new RouteBuilder(){
    @Override public void configure() throws Exception {
      from("direct:start").to(url).choice().when(header("customer").isEqualTo("gold")).to("mock:gold").otherwise().to("mock:unknown");
      from(url).process(new Processor(){
        public void process(        Exchange exchange) throws Exception {
          HttpServletResponse res=exchange.getIn().getBody(HttpServletResponse.class);
          res.setStatus(200);
          res.setHeader("customer","gold");
          step+="A";
          res.getWriter().write("");
          res.flushBuffer();
          Thread.sleep(2000);
          res.getWriter().write("Bye World");
          res.flushBuffer();
          step+="B";
        }
      }
);
    }
  }
;
}
