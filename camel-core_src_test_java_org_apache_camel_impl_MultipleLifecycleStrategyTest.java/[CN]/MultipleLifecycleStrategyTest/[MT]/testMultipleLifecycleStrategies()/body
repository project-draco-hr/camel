{
  CamelContext context=createCamelContext();
  context.start();
  Component log=new LogComponent();
  context.addComponent("log",log);
  context.addEndpoint("log:/foo",log.createEndpoint("log://foo"));
  context.removeComponent("log");
  context.stop();
  List<String> expectedEvents=Arrays.asList("onContextStart","onServiceAdd","onServiceAdd","onServiceAdd","onServiceAdd","onServiceAdd","onServiceAdd","onServiceAdd","onServiceAdd","onThreadPoolAdd","onComponentAdd","onEndpointAdd","onComponentRemove","onContextStop","onThreadPoolRemove");
  assertEquals(expectedEvents,dummy1.getEvents());
  assertEquals(expectedEvents,dummy2.getEvents());
}
