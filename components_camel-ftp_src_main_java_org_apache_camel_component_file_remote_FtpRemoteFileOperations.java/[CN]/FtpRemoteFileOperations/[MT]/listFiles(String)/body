{
  try {
    final List list=new ArrayList();
    FTPFile[] files=client.listFiles(path);
    for (    FTPFile file : files) {
      list.add(file);
    }
    return list;
  }
 catch (  IOException e) {
    throw new RemoteFileOperationFailedException(client.getReplyCode(),client.getReplyString(),e.getMessage(),e);
  }
}
