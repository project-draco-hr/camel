{
  int index=remaining.indexOf(":");
  String name=null;
  MetricsType type;
  if (index < 0) {
    type=DEFAULT_METRICS_TYPE;
  }
 else {
    name=remaining.substring(0,index);
    type=MetricsType.getByName(name);
  }
  if (type == null) {
    throw new RuntimeCamelException("Unknow metrics type \"" + name + "\"");
  }
  return type;
}
