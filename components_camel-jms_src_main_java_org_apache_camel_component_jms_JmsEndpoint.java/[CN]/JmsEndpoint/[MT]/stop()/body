{
  if (replyManager != null) {
    ServiceHelper.stopService(replyManager);
    replyManager=null;
  }
  if (!replyToReplyManager.isEmpty()) {
    for (    ReplyManager replyManager : replyToReplyManager.values()) {
      ServiceHelper.stopService(replyManager);
    }
    replyToReplyManager.clear();
  }
}
