{
  WebsocketComponent wc=getContext().getComponent("websocket",WebsocketComponent.class);
  wc.setPort(port);
  wc.setStaticResources("src/main/resources");
  TwitterComponent tc=getContext().getComponent("twitter",TwitterComponent.class);
  tc.setAccessToken(accessToken);
  tc.setAccessTokenSecret(accessTokenSecret);
  tc.setConsumerKey(consumerKey);
  tc.setConsumerSecret(consumerSecret);
  fromF("twitter://search?type=polling&delay=%s&keywords=%s",delay,searchTerm).setHeader(WebsocketConstants.SEND_TO_ALL).constant(true).to("websocket:camel-tweet");
}
