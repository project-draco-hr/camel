{
  for (int i=0; i < COUNT; i++) {
    latch.decrement();
  }
  Thread thread=new Thread(new Runnable(){
    public void run(){
      for (int i=0; i < COUNT; i++) {
        sleep();
        latch.increment();
      }
    }
  }
);
  thread.start();
  assertFalse("We can't be done in 100 ms",latch.await(100,TimeUnit.MILLISECONDS));
  assertLatchDone();
}
