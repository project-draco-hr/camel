{
  assertEquals(0,testCollection.count());
  pumpDataIntoTestCollection();
  Object result=template.requestBody("direct:aggregate","[{ $match : {$or : [{\"scientist\" : \"Darwin\"},{\"scientist\" : \"Einstein\"}]}},{ $group: { _id: \"$scientist\", count: { $sum: 1 }} } ]");
  assertTrue("Result is not of type List",result instanceof List);
  @SuppressWarnings("unchecked") List<DBObject> resultList=(List<DBObject>)result;
  assertListSize("Result does not contain 2 elements",resultList,2);
}
