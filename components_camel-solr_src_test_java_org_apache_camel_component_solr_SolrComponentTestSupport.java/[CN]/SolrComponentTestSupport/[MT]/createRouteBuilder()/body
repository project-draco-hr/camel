{
  return new RouteBuilder(){
    @Override public void configure() throws Exception {
      from("direct:start").to(SOLR_ROUTE_URI);
      from("direct:splitThenCommit").split(body()).to(SOLR_ROUTE_URI).end().setHeader(SolrConstants.OPERATION,constant(SolrConstants.OPERATION_COMMIT)).to(SOLR_ROUTE_URI);
    }
  }
;
}
