{
  if (variable.startsWith("${") && variable.endsWith("}")) {
    return SimpleLanguage.expression(variable).evaluate(exchange,Object.class) != null;
  }
 else   if (bodyMap.containsKey(variable)) {
    return true;
  }
 else   if (headersMap.containsKey(variable)) {
    return true;
  }
  return false;
}
