{
  return new RouteBuilder(){
    public void configure() throws Exception {
      Processor stringConverter=new Processor(){
        public void process(        Exchange exchange) throws Exception {
          XmppMessage xmppMessage=(XmppMessage)exchange.getIn();
          Message message=xmppMessage.getXmppMessage();
          String body=message.getBody();
          LOG.debug("Converting message - " + body);
          exchange.getIn().setBody(body);
        }
      }
;
      from("direct:toProducer1").to(getProducer1Uri());
      from("direct:toProducer2").to(getProducer2Uri());
      from(getConsumerUri()).process(stringConverter).to(getConsumerUri());
      from(getProducer1Uri()).process(stringConverter).to("mock:good");
      from(getProducer2Uri()).process(stringConverter).to("mock:bad");
    }
  }
;
}
