{
  if (isUseFixedDelay()) {
    if (LOG.isDebugEnabled()) {
      LOG.debug("Scheduling poll (fixed delay) with initialDelay: {}, delay: {} ({}) for: {}",new Object[]{getInitialDelay(),getDelay(),getTimeUnit().name().toLowerCase(),getEndpoint()});
    }
    future=executor.scheduleWithFixedDelay(this,getInitialDelay(),getDelay(),getTimeUnit());
  }
 else {
    if (LOG.isDebugEnabled()) {
      LOG.debug("Scheduling poll (fixed rate) with initialDelay: {}, delay: {} ({}) for: {}",new Object[]{getInitialDelay(),getDelay(),getTimeUnit().name().toLowerCase(),getEndpoint()});
    }
    future=executor.scheduleAtFixedRate(this,getInitialDelay(),getDelay(),getTimeUnit());
  }
}
