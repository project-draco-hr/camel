{
  if (LOG.isTraceEnabled()) {
    LOG.trace("Starting to poll: " + this.getEndpoint());
  }
  try {
    if (isRunAllowed()) {
      poll();
    }
  }
 catch (  Exception e) {
    LOG.warn("An exception occured while polling: " + this.getEndpoint() + ": "+ e.getMessage(),e);
    if (firstExceptionThrown == null) {
      firstExceptionThrown=e;
    }
  }
}
