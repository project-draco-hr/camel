{
  JpaComponent comp=context.getComponent("jpa",JpaComponent.class);
  EndpointConfiguration conf=comp.createConfiguration("jpa://org.apache.camel.examples.SendEmail" + "?usePersist=true&persistenceUnit=custom");
  assertEquals("true",conf.getParameter("usePersist"));
  assertEquals("custom",conf.getParameter("persistenceUnit"));
  ComponentConfiguration compConf=comp.createComponentConfiguration();
  String json=compConf.createParameterJsonSchema();
  assertNotNull(json);
  assertTrue(json.contains("\"entityType\": { \"kind\": \"path\", \"type\": \"string\""));
  assertTrue(json.contains("\"persistenceUnit\": { \"kind\": \"parameter\", \"type\": \"string\""));
  assertTrue(json.contains("\"usePassedInEntityManager\": { \"kind\": \"parameter\", \"type\": \"boolean\""));
}
