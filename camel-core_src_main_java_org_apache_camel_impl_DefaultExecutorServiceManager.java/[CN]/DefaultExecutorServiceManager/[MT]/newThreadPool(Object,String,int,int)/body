{
  ThreadPoolProfile defaultProfile=getDefaultThreadPoolProfile();
  ExecutorService answer=threadPoolFactory.newThreadPool(poolSize,maxPoolSize,defaultProfile.getKeepAliveTime(),defaultProfile.getTimeUnit(),defaultProfile.getMaxQueueSize(),defaultProfile.getRejectedExecutionHandler(),new CamelThreadFactory(threadNamePattern,name,true));
  onThreadPoolCreated(answer,source,null);
  if (LOG.isDebugEnabled()) {
    LOG.debug("Created new ThreadPool for source: {} with name: {}. -> {}",new Object[]{source,name,answer});
  }
  return answer;
}
