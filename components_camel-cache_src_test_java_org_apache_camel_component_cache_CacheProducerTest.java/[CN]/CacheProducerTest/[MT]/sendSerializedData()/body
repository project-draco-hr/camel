{
  template.send("direct:a",new Processor(){
    public void process(    Exchange exchange) throws Exception {
      Poetry p=new Poetry();
      p.setPoet("Ralph Waldo Emerson");
      p.setPoem("Brahma");
      exchange.setProperty(Exchange.CHARSET_NAME,"UTF-8");
      Message in=exchange.getIn();
      in.setBody(p);
    }
  }
);
}
