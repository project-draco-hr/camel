{
  return new RouteBuilder(){
    public void configure(){
      from("direct:fallback").to("log:fallback").to("mock:error");
      from("direct:run").process(new Processor(){
        @Override public void process(        Exchange exchange) throws Exception {
          Thread.sleep(500);
        }
      }
).to("log:result").to("mock:result");
      from("direct:start").to("hystrix:testKey?runEndpoint=direct:run&fallbackEndpoint=direct:fallback&circuitBreakerRequestVolumeThreshold=2");
    }
  }
;
}
