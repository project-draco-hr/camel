{
  int port=uri.getPort();
  if (port < 0) {
    if ("http".equals(uri.getScheme())) {
      port=80;
    }
 else     if ("https".equals(uri.getScheme())) {
      port=443;
    }
 else {
      throw new IllegalArgumentException("Unknown scheme, cannot determine port number for uri: " + uri);
    }
  }
  return port;
}
