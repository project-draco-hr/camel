{
  final Exchange exchange=getEndpoint().createExchange();
  exchange.getIn().setHeader(WebsocketConstants.CONNECTION_KEY,connectionKey);
  exchange.getIn().setBody(message);
  getAsyncProcessor().process(exchange,new AsyncCallback(){
    public void done(    boolean doneSync){
      if (exchange.getException() != null) {
        getExceptionHandler().handleException(String.format("Error processing exchange for websocket consumer on message '%s'.",message),exchange,exchange.getException());
      }
    }
  }
);
}
