{
  return new RouteBuilder(){
    @Override public void configure() throws Exception {
      from("direct:start").delay(250).transform(body().append(" World")).to("mock:result");
      from("direct:error").delay(250).process(new Processor(){
        public void process(        Exchange exchange) throws Exception {
          throw new IllegalArgumentException("Damn forced by unit test");
        }
      }
);
      from("direct:echo").transform(body().append(body()));
    }
  }
;
}
