{
  long max=System.currentTimeMillis() + 10000;
  while (true) {
    try {
      assertNotNull(createCamelContext().getComponent(component));
      return;
    }
 catch (    Exception t) {
      if (System.currentTimeMillis() < max) {
        Thread.sleep(1000);
      }
 else {
        throw t;
      }
    }
  }
}
