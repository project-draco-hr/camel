{
  return new SpringRouteBuilder(){
    public void configure() throws Exception {
      from("direct:okay").policy("PROPAGATION_REQUIRED").setBody(constant("Tiger in Action")).beanRef("bookService").setBody(constant("Elephant in Action")).beanRef("bookService");
      from("direct:fail").policy("PROPAGATION_REQUIRED").setBody(constant("Tiger in Action")).beanRef("bookService").setBody(constant("Donkey in Action")).beanRef("bookService");
    }
  }
;
}
