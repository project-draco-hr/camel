{
  InputStream in=null;
  try {
    byte[] buf=new byte[(int)file.length()];
    in=new BufferedInputStream(new FileInputStream(file));
    in.read(buf);
    return ByteBuffer.wrap(buf);
  }
  finally {
    try {
      if (in != null)       in.close();
    }
 catch (    IOException e) {
      LOG.warn("Failed to close file stream: " + file.getPath(),e);
    }
  }
}
