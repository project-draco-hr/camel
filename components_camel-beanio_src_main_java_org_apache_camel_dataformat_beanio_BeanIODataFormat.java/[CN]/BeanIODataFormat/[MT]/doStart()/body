{
  ObjectHelper.notNull(streamName,"Stream name not configured.");
  if (factory == null) {
    factory=StreamFactory.newInstance();
    InputStream is=ResourceHelper.resolveMandatoryResourceAsInputStream(getCamelContext().getClassResolver(),mapping);
    try {
      factory.load(is);
    }
  finally {
      IOHelper.close(is);
    }
  }
}
