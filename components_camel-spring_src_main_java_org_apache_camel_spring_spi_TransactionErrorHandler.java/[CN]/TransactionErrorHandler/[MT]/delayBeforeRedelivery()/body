{
  long delay=0;
  if (delayPolicy != null) {
    delay=delayPolicy.getDelay();
  }
  if (delay > 0) {
    try {
      if (LOG.isDebugEnabled()) {
        LOG.debug("Sleeping for: " + delay + " millis until attempting redelivery");
      }
      Thread.sleep(delay);
    }
 catch (    InterruptedException e) {
      Thread.currentThread().interrupt();
    }
  }
}
