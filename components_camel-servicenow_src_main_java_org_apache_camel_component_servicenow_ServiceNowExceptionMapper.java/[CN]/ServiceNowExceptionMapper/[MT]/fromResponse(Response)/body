{
  int code=r.getStatus();
  try {
    if (code == Response.Status.NOT_FOUND.getStatusCode() || code == Response.Status.BAD_REQUEST.getStatusCode() || code == Response.Status.UNAUTHORIZED.getStatusCode() || code == Response.Status.FORBIDDEN.getStatusCode() || code == Response.Status.METHOD_NOT_ALLOWED.getStatusCode()) {
      return mapper.readValue((InputStream)r.getEntity(),ServiceNowException.class);
    }
  }
 catch (  IOException e) {
    return new ServiceNowException(e);
  }
  return null;
}
