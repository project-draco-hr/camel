{
  return new RouteBuilder(){
    @Override public void configure() throws Exception {
      from("timer:foo?period=2000").routeId("foo").pollEnrich("file:target/pollenrich?move=done",5000).convertBodyTo(String.class).to("mock:result").process(new Processor(){
        public void process(        Exchange exchange) throws Exception {
          exchange.getContext().stopRoute("foo",100,TimeUnit.MILLISECONDS);
        }
      }
);
    }
  }
;
}
