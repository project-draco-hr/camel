{
  return new RouteBuilder(){
    @Override public void configure() throws Exception {
      String host="http://localhost:" + getPort();
      restConfiguration().component("jetty").host(host);
      from("direct:start").to("rest:get:api:hello/hi/{name}").to("mock:result");
      from("jetty:http://localhost:{{port}}/api/hello/hi/?matchOnUriPrefix=true").transform().constant("Hello Donald Duck");
    }
  }
;
}
