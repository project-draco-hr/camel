{
  long start=System.currentTimeMillis();
  long left=unit.toMillis(timeout);
  long end=start + left;
  for (  MockEndpoint endpoint : endpoints) {
    if (!endpoint.await(left,TimeUnit.MILLISECONDS))     throw new AssertionError("Timeout waiting for endpoints to receive enough messages. " + endpoint.getEndpointUri() + " timed out.");
    left=end - System.currentTimeMillis();
    if (left <= 0)     left=0;
  }
}
