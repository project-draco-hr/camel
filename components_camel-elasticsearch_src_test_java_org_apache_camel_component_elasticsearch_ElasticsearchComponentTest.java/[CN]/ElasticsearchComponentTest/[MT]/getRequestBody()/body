{
  GetRequest request=new GetRequest("foo").type("bar");
  String documentId=template.requestBody("direct:index",new IndexRequest("foo","bar","testId").source("{\"content\": \"hello\"}"),String.class);
  GetResponse response=template.requestBody("direct:get",request.id(documentId),GetResponse.class);
  assertThat(response,notNullValue());
  assertThat("hello",equalTo(response.getSourceAsMap().get("content")));
}
