{
  Transformer transformer=converter.getTransformerFactory().newTransformer(source);
  if (transformer != null) {
    setTransformer(transformer);
  }
 else {
    throw new TransformerConfigurationException("Error creating XSLT transformer. " + "This is most likely be caused by an XML parse error. " + "Please verify your XSLT file configured.");
  }
}
