{
  return new SpringRouteBuilder(){
    public void configure() throws Exception {
      SpringTransactionPolicy required=bean(SpringTransactionPolicy.class,"PROPAGATION_REQUIRED");
      errorHandler(transactionErrorHandler(required));
      from("direct:okay").policy(required).setBody(constant("Tiger in Action")).beanRef("bookService").setBody(constant("Elephant in Action")).beanRef("bookService");
      from("direct:fail").policy(required).setBody(constant("Tiger in Action")).beanRef("bookService").rollback();
    }
  }
;
}
