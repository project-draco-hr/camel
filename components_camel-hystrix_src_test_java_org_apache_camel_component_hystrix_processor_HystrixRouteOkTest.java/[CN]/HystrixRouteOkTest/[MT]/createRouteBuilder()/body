{
  return new RouteBuilder(){
    @Override public void configure() throws Exception {
      from("timer:trigger").to("log:trigger").hystrix().to("direct:foo").to("log:foo").onFallback().transform().constant("Fallback message").end().to("log:result").to("mock:result");
      from("direct:foo").transform().constant("Bye World");
    }
  }
;
}
