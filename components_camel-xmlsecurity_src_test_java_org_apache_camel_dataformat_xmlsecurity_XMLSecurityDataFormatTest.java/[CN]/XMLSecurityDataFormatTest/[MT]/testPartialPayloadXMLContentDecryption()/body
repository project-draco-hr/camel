{
  context.addRoutes(new RouteBuilder(){
    public void configure(){
      from("direct:start").marshal().secureXML("//cheesesites/italy/cheese",true).unmarshal().secureXML("//cheesesites/italy/cheese",true).process(new DecryptedXMLMessageProcessor());
    }
  }
);
  context.start();
  sendText();
}
