{
  return new RouteBuilder(){
    @Override public void configure() throws Exception {
      port1=getPort();
      port2=getNextPort();
      from("netty-http:http://0.0.0.0:" + port1 + "/foo ?matchOnUriPrefix=true").to("netty-http:http://0.0.0.0:" + port2 + "/proxy foo ?bridgeEndpoint=true&throwExceptionOnFailure=false");
      from("netty-http:http://0.0.0.0:" + port2 + "/proxy foo ?matchOnUriPrefix=true").transform().simple("Bye ${body}");
    }
  }
;
}
