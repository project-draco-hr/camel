{
  long time=0;
  if (timeExpression != null) {
    Long longValue=ExpressionHelper.evaluateAsType(timeExpression,exchange,Long.class);
    if (longValue != null) {
      time=longValue.longValue();
    }
  }
  if (time <= 0) {
    time=defaultProcessTime(exchange);
  }
  time+=delay;
  waitUntil(time,exchange);
}
