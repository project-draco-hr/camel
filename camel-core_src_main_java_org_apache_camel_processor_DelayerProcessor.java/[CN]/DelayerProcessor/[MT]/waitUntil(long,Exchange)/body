{
  while (true) {
    long delay=time - currentSystemTime();
    if (delay < 0) {
      return;
    }
 else {
      try {
        if (log.isDebugEnabled()) {
          log.debug("Sleeping for: " + delay + " millis");
        }
        Thread.sleep(delay);
      }
 catch (      InterruptedException e) {
        handleSleepInteruptedException(e);
      }
    }
  }
}
