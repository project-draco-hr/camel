{
  return new Comparator<GenericFile<?>>(){
    public int compare(    GenericFile<?> o1,    GenericFile<?> o2){
      long delta=o1.getFileLength() - o2.getFileLength();
      if (delta == 0) {
        return 0;
      }
      int answer=delta > 0 ? 1 : -1;
      return reverse ? -1 * answer : answer;
    }
  }
;
}
