{
  return new Comparator<RemoteFile>(){
    public int compare(    RemoteFile o1,    RemoteFile o2){
      long delta=o1.getLastModified() - o2.getLastModified();
      if (delta == 0) {
        return 0;
      }
      int answer=delta > 0 ? 1 : -1;
      return reverse ? -1 * answer : answer;
    }
  }
;
}
