{
  int d=depth;
  while (d <= depth) {
    int code=reader.next();
    if (code == XMLStreamReader.START_ELEMENT) {
      depth++;
    }
 else     if (code == XMLStreamReader.END_ELEMENT) {
      depth--;
    }
  }
  if (incl) {
    code=reader.next();
  }
 else {
    code=reader.getEventType();
    if (code == XMLStreamReader.END_ELEMENT) {
      depth++;
    }
  }
}
