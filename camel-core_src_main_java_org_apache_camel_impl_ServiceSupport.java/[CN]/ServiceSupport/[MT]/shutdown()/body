{
  stop();
  if (shuttingdown.compareAndSet(false,true)) {
    try {
      try {
        doShutdown();
      }
  finally {
        if (childServices != null) {
          ServiceHelper.stopAndShutdownService(childServices);
        }
      }
    }
  finally {
      shutdown.set(true);
      shuttingdown.set(false);
    }
  }
}
