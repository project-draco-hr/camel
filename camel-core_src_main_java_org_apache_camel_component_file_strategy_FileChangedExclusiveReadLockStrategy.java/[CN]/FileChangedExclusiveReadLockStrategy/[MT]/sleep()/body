{
  if (LOG.isTraceEnabled()) {
    LOG.trace("Exclusive read lock not granted. Sleeping for 1000 millis.");
  }
  try {
    Thread.sleep(1000);
    return false;
  }
 catch (  InterruptedException e) {
    LOG.debug("Sleep interrupted while waiting for exclusive read lock, so breaking out");
    return true;
  }
}
