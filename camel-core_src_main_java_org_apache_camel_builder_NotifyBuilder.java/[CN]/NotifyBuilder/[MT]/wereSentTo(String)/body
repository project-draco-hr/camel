{
  stack.push(new EventPredicateSupport(){
    private boolean matches;
    @Override public boolean onExchangeSent(    Exchange exchange,    Endpoint endpoint,    long timeTaken){
      if (EndpointHelper.matchEndpoint(endpoint.getEndpointUri(),endpointUri)) {
        matches=true;
      }
      return true;
    }
    public boolean matches(){
      return matches;
    }
    @Override public void reset(){
      matches=false;
    }
    @Override public String toString(){
      return "wereSentTo(" + endpointUri + ")";
    }
  }
);
  return this;
}
