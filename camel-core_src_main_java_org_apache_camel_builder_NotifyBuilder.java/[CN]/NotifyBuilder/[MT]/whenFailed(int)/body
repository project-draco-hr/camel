{
  stack.add(new EventPredicateSupport(){
    private int current;
    @Override public boolean onExchangeFailure(    Exchange exchange){
      current++;
      return true;
    }
    public boolean matches(){
      return current >= number;
    }
    @Override public String toString(){
      return "whenFailed(" + number + ")";
    }
  }
);
  return this;
}
