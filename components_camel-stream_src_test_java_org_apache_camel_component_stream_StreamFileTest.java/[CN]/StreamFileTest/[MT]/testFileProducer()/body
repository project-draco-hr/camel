{
  MockEndpoint mock=getMockEndpoint("mock:result");
  mock.expectedBodiesReceived("Hadrian","Camel");
  context.addRoutes(new RouteBuilder(){
    @Override public void configure() throws Exception {
      from("direct:start").routeId("produce").to("stream:file?fileName=target/stream/StreamFileTest.txt");
      from("file://target/stream?fileName=StreamFileTest.txt").routeId("consume").autoStartup(false).split().tokenize("\n").to("mock:result");
    }
  }
);
  context.start();
  template.sendBody("direct:start","Hadrian");
  template.sendBody("direct:start","Camel");
  context.startRoute("consume");
  assertMockEndpointsSatisfied();
  context.stop();
}
