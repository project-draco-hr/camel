{
  if (scheduler != null) {
    scheduler.getContext().put(QuartzConstants.QUARTZ_CAMEL_CONTEXT + "-" + getCamelContext().getName(),getCamelContext());
  }
  if (!isAutoStartScheduler()) {
    LOG.info("QuartzComponent configured to not auto start Quartz scheduler.");
    return;
  }
  startScheduler();
}
