{
  dataStoreFactory=new FileDataStoreFactory(DATA_STORE_DIR);
  GoogleAuthorizationCodeFlow flow=new GoogleAuthorizationCodeFlow.Builder(transport,jsonFactory,configuration.getClientId(),configuration.getClientSecret(),Collections.singleton(DriveScopes.DRIVE_FILE)).setDataStoreFactory(dataStoreFactory).build();
  return new AuthorizationCodeInstalledApp(flow,new LocalServerReceiver()).authorize("user");
}
