{
  CamelContext context=new DefaultCamelContext();
  final String fromStr="cxf:http://localhost:" + PORT + "/"+ this.getClass().getSimpleName()+ "/test?serviceClass=org.apache.camel.component.cxf.HelloService";
  context.addRoutes(new RouteBuilder(){
    public void configure(){
      from(fromStr).to("log:POJO");
    }
  }
);
  context.addRoutes(new RouteBuilder(){
    public void configure(){
      from(fromStr).to("log:POJO");
    }
  }
);
  try {
    context.start();
    fail("Expect to catch an exception here");
  }
 catch (  Exception ex) {
    assertTrue(ex.getMessage().endsWith("Multiple consumers for the same endpoint is not allowed: Endpoint[cxf://http://localhost:" + PORT + "/"+ getClass().getSimpleName()+ "/test?serviceClass=org.apache.camel.component.cxf.HelloService]"));
  }
  context.stop();
}
