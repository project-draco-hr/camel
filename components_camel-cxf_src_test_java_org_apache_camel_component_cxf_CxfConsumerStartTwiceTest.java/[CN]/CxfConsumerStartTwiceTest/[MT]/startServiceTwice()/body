{
  CamelContext context=new DefaultCamelContext();
  context.addRoutes(new RouteBuilder(){
    public void configure(){
      from("cxf:http://localhost:7070/test?serviceClass=org.apache.camel.component.cxf.HelloService").to("log:POJO");
    }
  }
);
  context.addRoutes(new RouteBuilder(){
    public void configure(){
      from("cxf:http://localhost:7070/test?serviceClass=org.apache.camel.component.cxf.HelloService").to("log:POJO");
    }
  }
);
  try {
    context.start();
    fail("Expect to catch an exception here");
  }
 catch (  Exception ex) {
    assertTrue(ex.getMessage().endsWith("Multiple consumers for the same endpoint is not allowed: Endpoint[cxf:http://localhost:7070/test?serviceClass=org.apache.camel.component.cxf.HelloService]"));
  }
  context.stop();
}
