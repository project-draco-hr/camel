{
  restConfiguration().component("spark-rest");
  rest("/hello/{me}").get().consumes("text/plain").route().to("log:input").transform().simple("Hello ${header.me}").endRest().get().consumes("application/json").route().to("log:input").transform().simple("{ \"message\": \"Hello ${header.me}\" }").endRest().get().consumes("text/xml").route().to("log:input").transform().simple("<message>Hello ${header.me}</message>");
}
