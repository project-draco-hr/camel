{
  return new RouteBuilder(){
    public void configure(){
      from("direct:start").tryBlock().process(validator).setHeader("valid",constant(true)).handle(ValidationException.class).setHeader("valid",constant(false)).finallyBlock().setBody(body()).choice().when(header("valid").isEqualTo(true)).to("mock:valid").otherwise().to("mock:invalid");
    }
  }
;
}
