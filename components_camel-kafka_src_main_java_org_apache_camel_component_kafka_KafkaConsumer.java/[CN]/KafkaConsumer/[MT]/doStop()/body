{
  super.doStop();
  log.info("Stopping Kafka consumer");
  if (consumer != null) {
    consumer.shutdown();
  }
  if (executor != null) {
    if (getEndpoint() != null && getEndpoint().getCamelContext() != null) {
      getEndpoint().getCamelContext().getExecutorServiceManager().shutdownNow(executor);
    }
 else {
      executor.shutdownNow();
    }
  }
  executor=null;
}
