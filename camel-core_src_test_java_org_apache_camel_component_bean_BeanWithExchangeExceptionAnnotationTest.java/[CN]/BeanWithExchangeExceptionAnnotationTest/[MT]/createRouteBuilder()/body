{
  return new RouteBuilder(){
    public void configure() throws Exception {
      errorHandler(deadLetterChannel("mock:error"));
      onException(MyCustomException.class).maximumRedeliveries(0).handled(true).beanRef("myBean","handleException").to("mock:error");
      from("direct:start").beanRef("myBean","throwException").to("mock:result");
    }
  }
;
}
