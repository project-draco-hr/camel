{
  DirectConsumer answer=null;
  StopWatch watch=new StopWatch();
  boolean done=false;
  while (!done) {
    Thread.sleep(500);
    if (LOG.isDebugEnabled()) {
      LOG.debug("Waited {} for consumer to be ready",watch.taken());
    }
    answer=endpoint.getConsumer();
    if (answer != null) {
      return answer;
    }
    done=watch.taken() >= endpoint.getTimeout();
  }
  return answer;
}
