{
  invalidEndpoint.expectedMessageCount(1);
  finallyEndpoint.expectedMessageCount(1);
  template.sendBodyAndHeader("file:target/validator","<mail xmlns='http://foo.com/bar'><body>Hello world!</body></mail>",Exchange.FILE_NAME,"invalid.xml");
  MockEndpoint.assertIsSatisfied(validEndpoint,invalidEndpoint,finallyEndpoint);
  oneExchangeDone.matchesMockWaitTime();
  assertTrue("Should be able to delete the file",FileUtil.deleteFile(new File("target/validator/invalid.xml")));
}
