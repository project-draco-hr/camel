{
  return new RouteBuilder(){
    @Override public void configure() throws Exception {
      restConfiguration().host("localhost");
      rest("/say/hello").get().to("direct:hello");
      rest("/say/bye").get().consumes("application/json").param().type(RestParamType.header).description("header param description1").dataType("integer").allowableValues(Arrays.asList("1","2","3","4")).defaultValue("1").allowMultiple(false).name("header_count").required(true).paramAccess("acc1").endParam().param().type(RestParamType.query).description("header param description2").dataType("string").allowableValues(Arrays.asList("a","b","c","d")).defaultValue("b").allowMultiple(true).name("header_letter").required(false).paramAccess("acc2").endParam().responseMessage().code(300).message("test msg").responseModel(Integer.class).endResponseMessage().to("direct:bye").post().to("mock:update");
      from("direct:hello").transform().constant("Hello World");
      from("direct:bye").transform().constant("Bye World");
    }
  }
;
}
