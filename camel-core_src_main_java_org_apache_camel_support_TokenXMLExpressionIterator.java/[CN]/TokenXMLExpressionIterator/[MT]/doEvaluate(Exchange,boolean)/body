{
  InputStream in=null;
  try {
    in=exchange.getIn().getMandatoryBody(InputStream.class);
    String charset=IOHelper.getCharsetName(exchange);
    return createIterator(in,charset);
  }
 catch (  InvalidPayloadException e) {
    exchange.setException(e);
    IOHelper.close(in);
    return null;
  }
 finally {
    if (closeStream) {
      IOHelper.close(in);
    }
  }
}
