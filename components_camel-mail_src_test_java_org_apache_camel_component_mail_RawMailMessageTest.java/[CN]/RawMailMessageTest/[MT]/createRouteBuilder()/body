      from("pop3://jonesPop3@localhost?password=secret&consumer.delay=2000&delete=true").to("mock://normalMessagePop3");
      from("imap://jonesImap@localhost?password=secret&consumer.delay=2000&delete=true").to("mock://normalMessageImap");
    }
  }
;
}
