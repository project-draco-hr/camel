{
  if (outBodyFunction == null) {
    outBodyFunction=new XPathFunction(){
      public Object evaluate(      List list) throws XPathFunctionException {
        if (exchange != null) {
          Message out=exchange.getOut(false);
          if (out != null) {
            return out.getBody();
          }
        }
        return null;
      }
    }
;
  }
  return outBodyFunction;
}
