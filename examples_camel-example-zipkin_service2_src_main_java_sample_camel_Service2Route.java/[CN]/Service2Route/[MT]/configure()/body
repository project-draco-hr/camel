{
  ZipkinTracer zipkin=new ZipkinTracer();
  zipkin.setHostName("192.168.99.100");
  zipkin.setPort(9410);
  zipkin.setServiceName("service2");
  zipkin.init(getContext());
  from("undertow:http://0.0.0.0:7070/service2").routeId("service2").convertBodyTo(String.class).delay(simple("${random(1000,2000)}")).transform(simple("Service2: ${body}"));
}
