{
  if (reader == null) {
    return null;
  }
  StringBuilder sb=new StringBuilder(1024);
  char[] buf=new char[1024];
  try {
    int len=reader.read(buf);
    if (len != -1) {
      sb.append(buf,0,len);
    }
  }
  finally {
    try {
      reader.close();
    }
 catch (    IOException e) {
      LOG.warn("Failed to close stream: " + e,e);
    }
  }
  return sb.toString().getBytes();
}
