{
  if (reader == null) {
    return null;
  }
  try {
    StringBuilder builder=new StringBuilder();
    boolean first=true;
    while (true) {
      String line=reader.readLine();
      if (line == null) {
        return builder.toString();
      }
      if (first) {
        first=false;
      }
 else {
        builder.append("\n");
      }
      builder.append(line);
    }
  }
  finally {
    try {
      reader.close();
    }
 catch (    IOException e) {
      LOG.warn("Failed to close stream: " + e,e);
    }
  }
}
