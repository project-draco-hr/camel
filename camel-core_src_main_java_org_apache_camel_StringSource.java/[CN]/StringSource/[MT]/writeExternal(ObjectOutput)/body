{
  int b=(text != null ? 0x01 : 0x00) + (encoding != null ? 0x02 : 0x00) + (getPublicId() != null ? 0x04 : 0x00)+ (getSystemId() != null ? 0x08 : 0x00);
  out.writeByte(b);
  if ((b & 0x01) != 0) {
    out.writeUTF(text);
  }
  if ((b & 0x02) != 0) {
    out.writeUTF(encoding);
  }
  if ((b & 0x04) != 0) {
    out.writeUTF(getPublicId());
  }
  if ((b & 0x08) != 0) {
    out.writeUTF(getSystemId());
  }
}
