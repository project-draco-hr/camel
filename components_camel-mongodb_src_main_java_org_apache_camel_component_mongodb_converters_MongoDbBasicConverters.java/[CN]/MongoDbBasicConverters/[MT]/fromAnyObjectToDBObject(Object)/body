{
  if (MongoDbBasicConverters.objectMapper == null) {
    LOG.warn("Conversion has fallen back to generic Object -> DBObject, but Jackson " + "was not available on the classpath during initialization. Returning null.");
    return null;
  }
  BasicDBObject answer;
  try {
    Map m=MongoDbBasicConverters.objectMapper.convertValue(value,Map.class);
    answer=new BasicDBObject(m);
  }
 catch (  Exception e) {
    LOG.warn("Conversion has fallen back to generic Object -> DBObject, but unable to convert type {}. Returning null.",value.getClass().getCanonicalName());
    return null;
  }
  return answer;
}
