{
  return new ProcessBuilder(){
    public void configure() throws Exception {
      ActivityBuilder a=activity("direct:a").name("a").correlate(header("foo"));
      ActivityBuilder b=activity("direct:b").name("b").correlate(header("foo"));
      ActivityBuilder c=activity("direct:c").name("c").correlate(xpath("/foo/bar"));
      b.starts().after(a.completes()).expectWithin(seconds(1)).errorIfOver(seconds(5));
    }
  }
;
}
