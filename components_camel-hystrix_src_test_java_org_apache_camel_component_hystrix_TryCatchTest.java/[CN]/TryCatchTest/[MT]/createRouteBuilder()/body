{
  return new RouteBuilder(){
    @Override public void configure() throws Exception {
      from("direct:start").doTry().to("direct:foo").doCatch(Exception.class).transform().constant("Fallback message").end().to("mock:result");
      from("direct:foo").errorHandler(noErrorHandler()).throwException(new IllegalArgumentException("Forced"));
    }
  }
;
}
