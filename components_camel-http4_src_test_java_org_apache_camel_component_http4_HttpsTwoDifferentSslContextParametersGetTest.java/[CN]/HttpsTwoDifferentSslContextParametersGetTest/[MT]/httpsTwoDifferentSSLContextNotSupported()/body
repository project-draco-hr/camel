{
  context.addRoutes(new RouteBuilder(){
    @Override public void configure() throws Exception {
      from("direct:foo").to("https4://127.0.0.1:" + getPort() + "/mail?x509HostnameVerifier=x509HostnameVerifier&sslContextParametersRef=sslContextParameters");
      from("direct:bar").to("https4://127.0.0.1:" + getPort() + "/mail?x509HostnameVerifier=x509HostnameVerifier&sslContextParametersRef=sslContextParameters2");
    }
  }
);
  try {
    context.start();
    fail("Should have thrown exception");
  }
 catch (  FailedToCreateRouteException e) {
    IllegalArgumentException iae=(IllegalArgumentException)e.getCause().getCause();
    assertNotNull(iae);
    assertTrue(iae.getMessage().startsWith("Only same instance of SSLContextParameters is supported."));
  }
}
