{
  boolean changed=false;
  StringBuilder sb=new StringBuilder();
  for (  char ch : hostName.toCharArray()) {
    if (ch < 127) {
      sb.append(ch);
    }
 else {
      changed=true;
    }
  }
  if (changed) {
    String newHost=sb.toString();
    LOG.info("Sanitized hostname from: {} to: {}",hostName,newHost);
    return newHost;
  }
 else {
    return hostName;
  }
}
