{
  ObjectHelper.notNull(name,"ThreadName");
  if (corePoolSize == 0) {
    corePoolSize=1;
  }
  ExecutorService answer=ExecutorServiceHelper.newThreadPool(threadNamePattern,name,corePoolSize,maxPoolSize,keepAliveTime,timeUnit,maxQueueSize,rejectedExecutionHandler,daemon);
  onThreadPoolCreated(answer);
  if (LOG.isDebugEnabled()) {
    LOG.debug("Created new thread pool for source: " + source + " with name: "+ name+ ". [poolSize="+ corePoolSize+ ", maxPoolSize="+ maxPoolSize+ ", keepAliveTime="+ keepAliveTime+ " "+ timeUnit+ ", maxQueueSize="+ maxQueueSize+ ", rejectedExecutionHandler="+ rejectedExecutionHandler+ ", daemon="+ daemon+ "] -> "+ answer);
  }
  return answer;
}
