{
  ExecutorService answer=ExecutorServiceHelper.newThreadPool(threadNamePattern,name,corePoolSize,maxPoolSize,maxQueueSize);
  onThreadPoolCreated(answer,source,null);
  if (LOG.isDebugEnabled()) {
    LOG.debug("Created new thread pool for source: " + source + " with name: "+ name+ ". [poolSize="+ corePoolSize+ ", maxPoolSize="+ maxPoolSize+ ", maxQueueSize="+ maxQueueSize+ "] -> "+ answer);
  }
  return answer;
}
