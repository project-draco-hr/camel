{
  String url="jdbc:drill:";
  if (mode.equals(DrillConnectionMode.DRILLBIT)) {
    url+=mode.name().toLowerCase() + "=" + host;
  }
 else {
    url+=mode.name().toLowerCase() + "=" + host+ ":"+ port;
  }
  if (StringUtils.isNotBlank(directory)) {
    url+="/" + directory;
  }
  if (StringUtils.isNotBlank(clusterId)) {
    url+="/" + clusterId;
  }
  return url;
}
