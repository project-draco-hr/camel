{
  String url="jdbc:drill:";
  if (mode.toUpperCase().equals(DrillConnectionMode.DRILLBIT.name())) {
    url+=mode + "=" + host;
  }
 else {
    url+=mode + "=" + host+ ":"+ port;
  }
  if (StringUtils.isNotBlank(directory)) {
    url+="/" + directory;
  }
  if (StringUtils.isNotBlank(clusterId)) {
    url+="/" + clusterId;
  }
  return url;
}
