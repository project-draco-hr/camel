{
  return new RouteBuilder(){
    @Override public void configure() throws Exception {
      restConfiguration().host("localhost");
      rest("/say/hello").id("hello").description("Hello Service").get().id("get-say").description("Says hello to you").to("direct:hello");
      rest("/say/bye").description("bye","Bye Service","en").get().description("Says bye to you").consumes("application/json").to("direct:bye").post().description("Updates the bye message").to("mock:update");
      from("direct:hello").transform().constant("Hello World");
      from("direct:bye").transform().constant("Bye World");
    }
  }
;
}
