{
switch (this.updateMode) {
case COUNTER:
    this.value+=newValue;
  break;
case VALUE:
this.value=newValue;
break;
case DIFFERENCE:
this.value-=newValue;
if (this.value < 0) {
this.value=-this.value;
}
break;
case MAXIMUM:
if (this.updateCount == 0 || this.value < newValue) {
this.value=newValue;
}
break;
case MINIMUM:
if (this.updateCount == 0 || this.value > newValue) {
this.value=newValue;
}
break;
default :
}
this.updateCount++;
}
