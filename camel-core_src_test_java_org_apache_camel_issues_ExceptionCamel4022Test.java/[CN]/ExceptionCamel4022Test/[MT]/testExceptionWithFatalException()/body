{
  getMockEndpoint("mock:result").expectedMessageCount(0);
  getMockEndpoint("mock:intermediate").expectedMessageCount(0);
  getMockEndpoint("mock:onexception").expectedMessageCount(0);
  try {
    template.sendBody("direct:start","<body/>");
