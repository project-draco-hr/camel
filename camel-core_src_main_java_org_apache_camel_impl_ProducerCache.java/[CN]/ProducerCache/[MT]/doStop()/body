{
  ServiceHelper.stopAndShutdownServices(statistics,pool);
  try {
    ServiceHelper.stopAndShutdownServices(producers.values());
  }
  finally {
    for (    Producer producer : producers.values()) {
      getCamelContext().removeService(producer);
    }
  }
  producers.clear();
  if (statistics != null) {
    statistics.clear();
  }
}
