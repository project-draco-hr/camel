{
  resultEndpoint.expectedMessageCount(0);
  try {
    template.sendBody(startEndpoint,"Bye World");
    fail("CamelExecutionException expected");
  }
 catch (  CamelExecutionException e) {
    assertIsInstanceOf(PredicateValidationException.class,e.getCause());
    assertEquals("Validation failed for Predicate[Simple: ${body} contains 'Camel']." + " Exchange[Message: Bye World]",e.getCause().getMessage());
  }
  assertMockEndpointsSatisfied();
}
