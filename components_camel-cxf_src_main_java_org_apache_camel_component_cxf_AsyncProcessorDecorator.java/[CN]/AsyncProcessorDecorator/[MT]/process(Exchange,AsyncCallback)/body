{
  try {
    before.process(exchange);
  }
 catch (  Exception e) {
    exchange.setException(e);
    callback.done(true);
    return true;
  }
  return processor.process(exchange,new AsyncCallback(){
    public void done(    boolean doneSynchronously){
      try {
        after.process(exchange);
        callback.done(doneSynchronously);
      }
 catch (      Exception e) {
        exchange.setException(e);
      }
    }
  }
);
}
