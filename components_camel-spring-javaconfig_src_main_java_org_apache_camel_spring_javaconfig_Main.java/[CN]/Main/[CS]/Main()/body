{
  addOption(new ParameterOption("bp","basedPackages","Sets the based packages of spring java config ApplicationContext","basedPackages"){
    protected void doProcess(    String arg,    String parameter,    LinkedList<String> remainingArgs){
      setBasedPackages(parameter);
    }
  }
);
  addOption(new ParameterOption("cc","configClasses","Sets the config Class of spring java config ApplicationContext","configureClasses"){
    protected void doProcess(    String arg,    String parameter,    LinkedList<String> remainingArgs){
      setConfigClassesString(parameter);
    }
  }
);
}
