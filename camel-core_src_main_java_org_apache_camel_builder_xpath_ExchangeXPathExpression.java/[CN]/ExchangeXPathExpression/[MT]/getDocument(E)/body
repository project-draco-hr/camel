{
  Message in=exchange.getIn();
  Class type=getDocumentType();
  Object answer=null;
  if (type != null) {
    answer=in.getBody(type);
  }
  if (answer == null) {
    answer=in.getBody();
  }
  if (answer instanceof String) {
    answer=new InputSource(new StringReader(answer.toString()));
  }
  return answer;
}
