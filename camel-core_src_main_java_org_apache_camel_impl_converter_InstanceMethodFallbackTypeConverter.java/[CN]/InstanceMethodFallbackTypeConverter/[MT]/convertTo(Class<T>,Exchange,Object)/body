{
  Object instance=injector.newInstance();
  if (instance == null) {
    throw new RuntimeCamelException("Could not instantiate an instance of: " + type.getCanonicalName());
  }
  return useExchange ? (T)ObjectHelper.invokeMethod(method,instance,type,value,exchange,registry) : (T)ObjectHelper.invokeMethod(method,instance,type,value,registry);
}
