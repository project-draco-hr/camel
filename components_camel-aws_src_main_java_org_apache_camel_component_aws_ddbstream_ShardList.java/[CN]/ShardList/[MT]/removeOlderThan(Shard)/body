{
  String current=removeBefore.getParentShardId();
  int removedShards=0;
  while (current != null) {
    Shard s=shards.remove(current);
    if (s == null) {
      current=null;
    }
 else {
      removedShards++;
      current=s.getParentShardId();
    }
  }
  LOG.trace("removed {} shards from the store, new size is {}",removedShards,shards.size());
}
