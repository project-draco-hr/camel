{
  mllpClient.setMllpHost("localhost");
  mllpClient.setMllpPort(AvailablePortFinder.getNextAvailable());
  return new RouteBuilder(){
    int connectTimeout=500;
    int responseTimeout=5000;
    @Override public void configure() throws Exception {
      String routeId="mllp-test-receiver-route";
      onCompletion().toF("log:%s?level=INFO&showAll=true",routeId).log(LoggingLevel.INFO,routeId,"Test route complete");
      fromF("mllp://%s:%d?autoAck=true&connectTimeout=%d&receiveTimeout=%d",mllpClient.getMllpHost(),mllpClient.getMllpPort(),connectTimeout,responseTimeout).routeId(routeId).to(result);
    }
  }
;
}
