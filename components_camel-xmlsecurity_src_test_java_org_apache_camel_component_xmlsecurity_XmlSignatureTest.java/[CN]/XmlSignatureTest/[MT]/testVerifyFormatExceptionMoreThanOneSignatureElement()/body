{
  MockEndpoint mock=setupExceptionMock();
  sendBody("direct:verifyexceptions","<?xml version=\"1.0\" encoding=\"UTF-8\"?><root><Signature xmlns=\"http://www.w3.org/2000/09/xmldsig#\"/><Signature xmlns=\"http://www.w3.org/2000/09/xmldsig#\"/></root>");
  assertMockEndpointsSatisfied();
  checkThrownException(mock,XmlSignatureFormatException.class,null);
}
