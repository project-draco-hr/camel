{
  restConfiguration().component("servlet").bindingMode(RestBindingMode.json).dataFormatProperty("prettyPrint","true");
  rest("/user").consumes("application/json").produces("application/json").get("/{id}").outType(User.class).to("bean:userService?method=getUser(${header.id})").put().type(User.class).outType(User.class).to("bean:userService?method=updateUser").get("/findAll").outTypeList(User.class).to("bean:userService?method=listUsers");
}
