{
  try {
    Object response=getMethod().invoke(pojo,getArgs());
    exchange.getOut().setBody(response);
  }
 catch (  InvocationTargetException e) {
    exchange.setException(e.getCause());
  }
catch (  RuntimeException e) {
    throw e;
  }
catch (  Throwable e) {
    throw new RuntimeException(e);
  }
}
