{
  int num=state.get();
  String state;
  if (num == 0) {
    state="closed";
  }
 else   if (num == 1) {
    state="half open";
  }
 else {
    state="open";
  }
  if (lastFailure > 0) {
    return String.format("State %s, failures %d, closed since %d",state,failures.get(),System.currentTimeMillis() - lastFailure);
  }
 else {
    return String.format("State %s, failures %d",state,failures.get());
  }
}
