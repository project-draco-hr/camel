{
  return new RouteBuilder(){
    @Override public void configure() throws Exception {
      restConfiguration().component("servlet").host("localhost").endpointProperty("httpBindingRef","#myBinding");
      rest("/users/").get("{id}/{query}").route().to("mock:query").process(new Processor(){
        public void process(        Exchange exchange) throws Exception {
          String id=exchange.getIn().getHeader("id",String.class);
          exchange.getOut().setBody(id + ";Goofy");
        }
      }
).endRest().get("{id}/basic").route().to("mock:input").process(new Processor(){
        public void process(        Exchange exchange) throws Exception {
          String id=exchange.getIn().getHeader("id",String.class);
          exchange.getOut().setBody(id + ";Donald Duck");
        }
      }
).endRest();
    }
  }
;
}
