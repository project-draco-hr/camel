{
  boolean disabled=!camelContext.getManagementStrategy().isLoadStatisticsEnabled() || camelContext.getManagementStrategy().getStatisticsLevel() == ManagementStatisticsLevel.Off;
  LOG.debug("Load performance statistics {}",disabled ? "disabled" : "enabled");
  if (!disabled) {
    loadTimer.setInterval(1000);
    getCamelContext().addService(loadTimer);
  }
}
