{
  String response=template.requestBody("direct:start","<order foo='1'/>",String.class);
  assertEquals("received [<order foo='1'/>] as an order id = " + ID,response);
  response=template.requestBodyAndHeader("restlet:http://localhost:" + portNum + "/orders?restletMethod=post&foo=bar","<order foo='1'/>","id","89531",String.class);
  assertEquals("received [<order foo='1'/>] as an order id = " + ID,response);
}
