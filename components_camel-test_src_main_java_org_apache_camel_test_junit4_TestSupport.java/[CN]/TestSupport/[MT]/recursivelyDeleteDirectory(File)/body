{
  if (!file.exists()) {
    return;
  }
  if (file.isDirectory()) {
    File[] files=file.listFiles();
    for (int i=0; i < files.length; i++) {
      recursivelyDeleteDirectory(files[i]);
    }
  }
 else {
    boolean success=file.delete();
    if (!success) {
      LOG.warn("Deletion of file: " + file.getAbsolutePath() + " failed");
    }
  }
}
