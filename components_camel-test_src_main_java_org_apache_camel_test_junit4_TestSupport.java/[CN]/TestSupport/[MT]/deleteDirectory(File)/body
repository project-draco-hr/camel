{
  int tries=0;
  int maxTries=5;
  boolean exists=true;
  while (exists && (tries < maxTries)) {
    recursivelyDeleteDirectory(file);
    tries++;
    exists=file.exists();
    if (exists) {
      try {
        Thread.sleep(1000);
      }
 catch (      InterruptedException e) {
      }
    }
  }
  if (exists) {
    throw new RuntimeException("Deletion of file " + file + " failed");
  }
}
