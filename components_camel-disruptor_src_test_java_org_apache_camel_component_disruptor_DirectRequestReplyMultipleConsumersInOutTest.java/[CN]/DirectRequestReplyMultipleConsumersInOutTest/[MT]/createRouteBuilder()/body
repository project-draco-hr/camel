{
  return new RouteBuilder(){
    @Override public void configure() throws Exception {
      from("direct:start").transform(constant("Bye World")).inOut("disruptor:log?multipleConsumers=true");
      from("disruptor:log?multipleConsumers=true").delay(100).transform(body().append("-1")).to("mock:log");
      from("disruptor:log?multipleConsumers=true").delay(1000).transform(body().append("-2")).to("mock:log");
    }
  }
;
}
