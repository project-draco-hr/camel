{
  while (true) {
    long delay=time - currentSystemTime();
    if (delay < 0) {
      return;
    }
 else {
      if (isFastStop() && (isStopped() || isStopping())) {
        throw new AlreadyStoppedException();
      }
      try {
        sleep(delay);
      }
 catch (      InterruptedException e) {
        handleSleepInteruptedException(e);
      }
    }
  }
}
