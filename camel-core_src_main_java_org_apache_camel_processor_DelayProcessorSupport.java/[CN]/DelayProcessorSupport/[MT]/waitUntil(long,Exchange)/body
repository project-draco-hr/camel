{
  while (isRunAllowed()) {
    long delay=time - currentSystemTime();
    if (delay < 0) {
      return;
    }
 else {
      if (isFastStop() && !isRunAllowed()) {
        throw new AlreadyStoppedException();
      }
      try {
        sleep(delay);
      }
 catch (      InterruptedException e) {
        handleSleepInterruptedException(e);
      }
    }
  }
}
