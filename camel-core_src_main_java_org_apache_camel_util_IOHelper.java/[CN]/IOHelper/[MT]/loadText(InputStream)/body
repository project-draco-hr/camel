{
  StringBuilder builder=new StringBuilder();
  InputStreamReader isr=new InputStreamReader(in);
  try {
    BufferedReader reader=buffered(isr);
    while (true) {
      String line=reader.readLine();
      if (line != null) {
        builder.append(line);
        builder.append("\n");
      }
 else {
        break;
      }
    }
    return builder.toString();
  }
  finally {
    close(isr,in);
  }
}
