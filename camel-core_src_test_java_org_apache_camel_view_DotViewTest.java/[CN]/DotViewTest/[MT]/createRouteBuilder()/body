{
  return new RouteBuilder(){
    public void configure(){
      from("direct:simpleFilterRoute").filter(header("foo").isEqualTo("bar")).to("mock:result");
      from("direct:filterAndRecipientList").filter(header("foo").isEqualTo("bar")).recipientList(header("bar")).splitter(XPathBuilder.xpath("/invoice/lineItems")).to("mock:result");
    }
  }
;
}
