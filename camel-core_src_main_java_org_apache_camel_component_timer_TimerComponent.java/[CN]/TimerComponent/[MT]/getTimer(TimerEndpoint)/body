{
  String key=endpoint.getTimerName();
  if (!endpoint.isDaemon()) {
    key="nonDaemon:" + key;
  }
  Timer answer;
synchronized (timers) {
    answer=timers.get(key);
    if (answer == null) {
      answer=new Timer(endpoint.getTimerName(),endpoint.isDaemon());
      timers.put(key,answer);
    }
  }
  return answer;
}
