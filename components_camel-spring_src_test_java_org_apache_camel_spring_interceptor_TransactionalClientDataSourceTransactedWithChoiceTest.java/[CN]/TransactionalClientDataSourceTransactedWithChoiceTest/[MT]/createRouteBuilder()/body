{
  return new SpringRouteBuilder(){
    public void configure() throws Exception {
      from("direct:okay").transacted().choice().when(body().contains("Hello")).to("log:hello").otherwise().to("log:other").end().to("direct:tiger").setBody(constant("Elephant in Action")).beanRef("bookService");
      from("direct:tiger").transacted().setBody(constant("Tiger in Action")).beanRef("bookService");
      from("direct:donkey").setBody(constant("Donkey in Action")).beanRef("bookService");
      from("direct:fail").transacted().setBody(constant("Tiger in Action")).beanRef("bookService").to("direct:donkey");
    }
  }
;
}
