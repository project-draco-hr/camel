{
  String msg=String.format("Dear Ibsen, Claus%s%sThanks for the order of Camel in Action.%s%sRegards Camel Riders Bookstore%sPS: Next beer is on me, James",System.lineSeparator(),System.lineSeparator(),System.lineSeparator(),System.lineSeparator(),System.lineSeparator());
  MockEndpoint mock=getMockEndpoint("mock:result");
  mock.expectedBodiesReceived(msg);
  template.send("direct:a",createLetter());
  mock.assertIsSatisfied();
  mock.reset();
  String msg2=String.format("Dear Ibsen, Claus%s%sThanks for the order of Camel in Action.%s%sRegards Apache Camel Riders Bookstore%sPS: Next beer is on me, James",System.lineSeparator(),System.lineSeparator(),System.lineSeparator(),System.lineSeparator(),System.lineSeparator());
  mock.expectedBodiesReceived(msg2);
  template.send("direct:a",createLetter());
  mock.assertIsSatisfied();
}
