{
  TimerComponent comp=context.getComponent("timer",TimerComponent.class);
  EndpointConfiguration conf=comp.createConfiguration("timer:foo?period=2000");
  assertEquals("2000",conf.getParameter("period"));
  ComponentConfiguration compConf=comp.createComponentConfiguration();
  String json=compConf.createParameterJsonSchema();
  assertNotNull(json);
  assertTrue(json.contains("\"timerName\": { \"kind\": \"path\", \"type\": \"string\", \"javaType\": \"java.lang.String\"" + ", \"deprecated\": \"false\", \"description\": \"The name of the timer\" }"));
  assertTrue(json.contains("\"delay\": { \"kind\": \"parameter\", \"type\": \"integer\""));
}
