{
  AbstractApplicationContext applicationContext=new ClassPathXmlApplicationContext(new String[]{"/META-INF/spring/camelContext.xml"});
  CamelContext camelContext=applicationContext.getBean("camelContext",CamelContext.class);
  assertNotNull("The camel context should not be null",camelContext);
  Thread.sleep(2000);
  camelContext.stop();
  applicationContext.stop();
}
