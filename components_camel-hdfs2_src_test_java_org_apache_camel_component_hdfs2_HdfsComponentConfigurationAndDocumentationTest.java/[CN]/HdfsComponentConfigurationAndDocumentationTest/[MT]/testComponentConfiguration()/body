{
  HdfsComponent comp=context.getComponent("hdfs2",HdfsComponent.class);
  EndpointConfiguration conf=comp.createConfiguration("hdfs2://localhost/tmp/simple-file?" + "splitStrategy=IDLE:1000,BYTES:5&fileSystemType=LOCAL&fileType=ARRAY_FILE&initialDelay=0");
  assertEquals("LOCAL",conf.getParameter("fileSystemType"));
  assertEquals("ARRAY_FILE",conf.getParameter("fileType"));
  assertEquals("0",conf.getParameter("initialDelay"));
  ComponentConfiguration compConf=comp.createComponentConfiguration();
  String json=compConf.createParameterJsonSchema();
  assertNotNull(json);
  assertTrue(json.contains("\"initialDelay\": { \"type\": \"integer\""));
  assertTrue(json.contains("\"checkIdleInterval\": { \"type\": \"integer\""));
}
