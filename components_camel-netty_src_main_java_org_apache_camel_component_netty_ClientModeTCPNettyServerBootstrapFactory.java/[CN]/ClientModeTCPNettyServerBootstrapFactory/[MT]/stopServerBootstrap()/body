{
  LOG.info("ServerBootstrap disconnecting from {}:{}",configuration.getHost(),configuration.getPort());
  if (channelFactory != null) {
    channelFactory.releaseExternalResources();
    channelFactory=null;
  }
  if (bossPool != null) {
    bossPool.shutdown();
    bossPool=null;
  }
  if (workerPool != null) {
    workerPool.shutdown();
    workerPool=null;
  }
}
