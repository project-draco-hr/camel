{
  super.setBindingId(bind);
  if (isJSR181Enabled) {
    if (SOAPBinding.SOAP11HTTP_BINDING.equals(bind) || SOAPBinding.SOAP12HTTP_BINDING.equals(bind)) {
      setBindingConfig(new JaxWsSoapBindingConfiguration((JaxWsServiceFactoryBean)getServiceFactory()));
    }
 else     if (SOAPBinding.SOAP11HTTP_MTOM_BINDING.equals(bind) || SOAPBinding.SOAP12HTTP_MTOM_BINDING.equals(bind)) {
      setBindingConfig(new JaxWsSoapBindingConfiguration((JaxWsServiceFactoryBean)getServiceFactory()));
      ((JaxWsSoapBindingConfiguration)getBindingConfig()).setMtomEnabled(true);
    }
  }
}
