{
  String txtValue="CIAO MONDO !";
  template.sendBody("direct:write_text4",txtValue);
  stopCamelContext();
  Configuration conf=new Configuration();
  Path file1=new Path("file:///tmp/test/test-camel-text4");
  FileSystem fs1=FileSystem.get(file1.toUri(),conf);
  ArrayFile.Reader reader=new ArrayFile.Reader(fs1,"file:///tmp/test/test-camel-text4",conf);
  Text value=(Text)ReflectionUtils.newInstance(reader.getValueClass(),conf);
  reader.next(value);
  Assert.assertEquals(value.toString(),txtValue);
}
