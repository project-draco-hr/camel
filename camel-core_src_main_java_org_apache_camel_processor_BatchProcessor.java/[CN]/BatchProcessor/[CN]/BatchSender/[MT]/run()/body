{
  while (true) {
    try {
      Thread.sleep(batchTimeout);
      queue.drainTo(collection,batchSize);
    }
 catch (    InterruptedException e) {
      if (cancelRequested) {
        return;
      }
      while (isInBatchCompleted(queue.size())) {
        queue.drainTo(collection,batchSize);
      }
      if (!isOutBatchCompleted()) {
        continue;
      }
    }
    try {
      sendExchanges();
    }
 catch (    Exception e) {
      getExceptionHandler().handleException(e);
    }
  }
}
