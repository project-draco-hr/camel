{
  while (true) {
    try {
      deliveryRequestLock.lock();
      try {
        deliveryRequestCondition.await(DELIVERY_ATTEMPT_INTERVAL,TimeUnit.MILLISECONDS);
      }
  finally {
        deliveryRequestLock.unlock();
      }
    }
 catch (    InterruptedException e) {
      break;
    }
    try {
      engine.deliver();
    }
 catch (    Exception e) {
      exceptionHandler.handleException(e);
    }
  }
}
