{
  return new RouteBuilder(){
    @Override public void configure() throws Exception {
      errorHandler(deadLetterChannel("mock:dead").disableRedelivery().logStackTrace(false).delay(0));
      onException(IllegalArgumentException.class).maximumRedeliveries(2).useOriginalBody().handled(true).to("mock:a");
      from("direct:a").setBody(body().append(" World")).process(new MyThrowProcessor(false));
      from("direct:b").setBody(body().append(" World")).process(new MyThrowProcessor(true));
    }
  }
;
}
