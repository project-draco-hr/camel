{
  Connection answer=null;
  int counter=0;
  while (counter++ < timeout) {
    answer=pcf.createConnection();
    if (answer == null) {
      try {
        Thread.sleep(1000);
      }
 catch (      InterruptedException e) {
        log.info("Intrupted but ignoring: ",e.getMessage());
      }
    }
 else {
      break;
    }
  }
  if (answer != null) {
    answer.start();
  }
  return answer;
}
