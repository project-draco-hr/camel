{
  NotifyBuilder event=event().whenExactlyDone(1).create();
  template.sendBody("direct:foo","Hello World");
  assertEquals(true,event.matches());
  template.sendBody("direct:foo","Bye World");
  assertEquals(false,event.matches());
  event.reset();
  assertEquals(false,event.matches());
  template.sendBody("direct:foo","Hello World");
  assertEquals(true,event.matches());
  template.sendBody("direct:foo","Bye World");
  assertEquals(false,event.matches());
}
