{
  return new RouteBuilder(){
    @Override public void configure() throws Exception {
      String[] destinations=new String[numFiles];
      for (int i=0; i < numFiles; i++) {
        destinations[i]="seda:file" + i;
        from("seda:file" + i).setHeader(Exchange.FILE_NAME,constant("file" + i + ".txt")).to("file://" + path + "/?append=false&noop=true","mock:result");
      }
      from("seda:testFileCreatedAsDir").to(destinations);
    }
  }
;
}
