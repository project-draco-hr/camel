{
  while (!completed.get()) {
    try {
      if (duration > 0) {
        TimeUnit unit=getTimeUnit();
        LOG.info("Waiting for: " + duration + " "+ unit);
        latch.await(duration,unit);
        completed.set(true);
      }
 else {
        latch.await();
      }
    }
 catch (    InterruptedException e) {
      Thread.currentThread().interrupt();
    }
  }
}
