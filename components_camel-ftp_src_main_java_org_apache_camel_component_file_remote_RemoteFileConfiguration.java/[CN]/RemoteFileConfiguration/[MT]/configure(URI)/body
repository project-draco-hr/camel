{
  super.configure(uri);
  setProtocol(uri.getScheme());
  setDefaultPort();
  String username=uri.getUserInfo();
  String pw=null;
  if (username != null && username.contains(":")) {
    pw=ObjectHelper.before(username,":");
    username=ObjectHelper.after(username,":");
  }
  if (username != null) {
    setUsername(username);
  }
  if (pw != null) {
    setPassword(pw);
  }
  setHost(uri.getHost());
  setPort(uri.getPort());
}
