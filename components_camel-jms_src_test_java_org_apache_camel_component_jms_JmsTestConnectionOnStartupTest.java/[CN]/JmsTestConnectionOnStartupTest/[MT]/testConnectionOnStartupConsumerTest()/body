{
  context.addRoutes(new RouteBuilder(){
    @Override public void configure() throws Exception {
      from("activemq:queue:foo?testConnectionOnStartup=true").to("mock:foo");
    }
  }
);
  try {
    context.start();
    fail("Should have thrown an exception");
  }
 catch (  FailedToCreateConsumerException e) {
    assertEquals("Failed to create Consumer for endpoint: Endpoint[activemq://queue:foo?testConnectionOnStartup=true]. " + "Reason: Cannot get JMS Connection on startup for destination foo",e.getMessage());
  }
}
