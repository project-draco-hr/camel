{
  return new RouteBuilder(){
    public void configure(){
      from("direct://COPYFOLDER").to("box://" + PATH_PREFIX + "/copyFolder");
      from("direct://CREATEFOLDER").to("box://" + PATH_PREFIX + "/createFolder?inBody=folderRequest");
      from("direct://CREATESHAREDLINK").to("box://" + PATH_PREFIX + "/createSharedLink");
      from("direct://DELETEFOLDER").to("box://" + PATH_PREFIX + "/deleteFolder");
      from("direct://GETFOLDER").to("box://" + PATH_PREFIX + "/getFolder");
      from("direct://GETFOLDERCOLLABORATIONS").to("box://" + PATH_PREFIX + "/getFolderCollaborations");
      from("direct://GETFOLDERITEMS").to("box://" + PATH_PREFIX + "/getFolderItems");
      from("direct://UPDATEFOLDERINFO").to("box://" + PATH_PREFIX + "/updateFolderInfo");
    }
  }
;
}
