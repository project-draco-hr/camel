{
  char[] buffer=new char[(int)new File(filePath).length()];
  BufferedReader reader=null;
  try {
    reader=new BufferedReader(new InputStreamReader(new FileInputStream(filePath),"UTF-8"));
    reader.read(buffer);
  }
  finally {
    if (reader != null) {
      reader.close();
    }
  }
  return new String(buffer);
}
