{
  return new SpringRouteBuilder(){
    public void configure() throws Exception {
      from("direct:okay").transacted().onException(IllegalArgumentException.class).handled(false).to("mock:error").end().setBody(constant("Tiger in Action")).beanRef("bookService").setBody(constant("Elephant in Action")).beanRef("bookService");
      from("direct:fail").transacted().onException(IllegalArgumentException.class).handled(false).to("mock:error").end().setBody(constant("Tiger in Action")).beanRef("bookService").setBody(constant("Donkey in Action")).beanRef("bookService");
    }
  }
;
}
