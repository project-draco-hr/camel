{
  return new RouteBuilder(){
    public void configure(){
      from("direct:async").to("xmlrpc:http://localhost:9000/xmlrpc/test").to("mock:result");
      from("direct:sync").to("xmlrpc:http://localhost:9000/xmlrpc/test?synchronous=true").to("mock:result");
      from("jetty:http://localhost:9000/xmlrpc/test").convertBodyTo(String.class).to("log:org.apache.camel.component.xmlrpc").transform().constant(RESPONSE);
      from("jetty:http://localhost:9000/xmlrpc/fault").convertBodyTo(String.class).to("log:org.apache.camel.component.xmlrpc").transform().constant(FAULT_RESPONSE);
    }
  }
;
}
