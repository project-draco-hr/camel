{
  if (!notifier.isEnabled(event)) {
    if (LOG.isTraceEnabled()) {
      LOG.trace("Notification of event is disabled: " + event);
    }
    return;
  }
  try {
    notifier.notify(event);
  }
 catch (  Exception e) {
    LOG.warn("Error notifying event " + event + ". This exception will be ignored. ",e);
  }
}
