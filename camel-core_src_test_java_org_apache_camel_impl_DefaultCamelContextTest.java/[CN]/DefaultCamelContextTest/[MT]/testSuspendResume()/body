{
  DefaultCamelContext ctx=new DefaultCamelContext();
  assertEquals(false,ctx.isStarted());
  assertEquals(false,ctx.isSuspended());
  ctx.start();
  assertEquals(true,ctx.isStarted());
  assertEquals(false,ctx.isSuspended());
  ctx.suspend();
  assertEquals(true,ctx.isStarted());
  assertEquals(true,ctx.isSuspended());
  ctx.resume();
  assertEquals(true,ctx.isStarted());
  assertEquals(false,ctx.isSuspended());
  ctx.stop();
  assertEquals(false,ctx.isStarted());
  assertEquals(false,ctx.isSuspended());
}
