{
  Customer input=new Customer();
  input.setName("Donald Duck");
  String response=template.requestBodyAndHeader("cxfrs:http://localhost:" + PORT1 + "/CxfOperationExceptionTest/customerservice/customers?throwExceptionOnFailure=false",input,Exchange.HTTP_METHOD,"POST",String.class);
