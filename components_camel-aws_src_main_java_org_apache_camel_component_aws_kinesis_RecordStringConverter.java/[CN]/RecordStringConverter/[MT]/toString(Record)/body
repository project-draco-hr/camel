{
  Charset charset=Charset.forName("UTF-8");
  ByteBuffer buffer=record.getData();
  if (buffer.hasArray()) {
    byte[] bytes=record.getData().array();
    return new String(bytes,charset);
  }
 else {
    byte[] bytes=new byte[buffer.remaining()];
    buffer.get(bytes);
    return new String(bytes,charset);
  }
}
