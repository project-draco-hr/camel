{
  return new RouteBuilder(){
    @Override public void configure() throws Exception {
      from("direct:start").aop().aroundFinally("mock:before","mock:after").choice().when(body().isEqualTo("Hello World")).transform(constant("Bye World")).otherwise().transform(constant("Kabom the World")).throwException(new IllegalArgumentException("Damn")).end().to("mock:result");
    }
  }
;
}
