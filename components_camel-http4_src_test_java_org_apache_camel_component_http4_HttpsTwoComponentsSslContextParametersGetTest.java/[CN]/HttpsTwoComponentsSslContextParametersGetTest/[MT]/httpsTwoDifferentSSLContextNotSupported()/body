{
  context.addRoutes(new RouteBuilder(){
    @Override public void configure() throws Exception {
      port2=AvailablePortFinder.getNextAvailable(getPort());
      from("direct:foo").to("http4s-foo://127.0.0.1:" + getPort() + "/mail?x509HostnameVerifier=x509HostnameVerifier&sslContextParametersRef=sslContextParameters");
      from("direct:bar").to("http4s-bar://127.0.0.1:" + port2 + "/mail?x509HostnameVerifier=x509HostnameVerifier&sslContextParametersRef=sslContextParameters2");
    }
  }
);
  context.start();
  Thread.sleep(500);
  context.stop();
}
