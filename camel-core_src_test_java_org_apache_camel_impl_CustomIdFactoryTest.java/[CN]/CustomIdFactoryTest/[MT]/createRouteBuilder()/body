{
  return new RouteBuilder(){
    @Override public void configure() throws Exception {
      context.setNodeIdFactory(new NodeIdFactory(){
        public String createId(        OptionalIdentifiedDefinition<?> definition){
          return "#" + definition.getShortName() + ++counter+ "#";
        }
      }
);
      context.addInterceptStrategy(new MyDebuggerCheckingId());
      from("direct:start").choice().when(body().contains("Hello")).to("mock:hello").otherwise().to("mock:other").end();
    }
  }
;
}
