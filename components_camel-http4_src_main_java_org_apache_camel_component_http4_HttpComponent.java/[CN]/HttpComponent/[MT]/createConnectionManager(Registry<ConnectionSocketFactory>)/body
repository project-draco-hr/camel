{
  PoolingHttpClientConnectionManager answer=new PoolingHttpClientConnectionManager(registry,null,null,null,getConnectionTimeToLive(),TimeUnit.MILLISECONDS);
  if (getMaxTotalConnections() > 0) {
    answer.setMaxTotal(getMaxTotalConnections());
  }
  if (getConnectionsPerRoute() > 0) {
    answer.setDefaultMaxPerRoute(getConnectionsPerRoute());
  }
  LOG.info("Created ClientConnectionManager " + answer);
  return answer;
}
