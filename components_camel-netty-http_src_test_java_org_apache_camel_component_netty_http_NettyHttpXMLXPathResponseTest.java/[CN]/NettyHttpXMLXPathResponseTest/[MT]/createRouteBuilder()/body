{
  return new RouteBuilder(){
    @Override public void configure() throws Exception {
      from("netty-http:http://0.0.0.0:{{port}}/foo").choice().when().xpath("/person/name = 'Claus'").transform(xpath("/person/name")).when().xpath("/person/name = 'James'").transform(xpath("/person/name/text()")).otherwise().transform(simple("Dont understand ${body}"));
    }
  }
;
}
