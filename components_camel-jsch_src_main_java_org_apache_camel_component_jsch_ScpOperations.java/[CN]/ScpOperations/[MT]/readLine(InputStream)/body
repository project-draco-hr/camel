{
  ByteArrayOutputStream bytes=new ByteArrayOutputStream();
  int c=0;
  do {
    c=is.read();
    if (c == '\n') {
      return bytes.toString();
    }
    bytes.write(c);
  }
 while (c != -1);
  String message="[scp] Unexpected end of stream";
  LOG.info(message);
  throw new IOException(message);
}
