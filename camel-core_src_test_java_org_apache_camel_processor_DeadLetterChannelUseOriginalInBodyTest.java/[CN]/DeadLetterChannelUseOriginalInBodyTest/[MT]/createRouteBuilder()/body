{
  return new RouteBuilder(){
    @Override public void configure() throws Exception {
      ErrorHandlerBuilder a=deadLetterChannel("mock:a").maximumRedeliveries(2).redeliveryDelay(0).logStackTrace(false).useOriginalMessage();
      ErrorHandlerBuilder b=deadLetterChannel("mock:b").maximumRedeliveries(2).redeliveryDelay(0).logStackTrace(false);
      from("direct:a").errorHandler(a).setBody(body().append(" World")).process(new MyThrowProcessor());
      from("direct:b").errorHandler(b).setBody(body().append(" World")).process(new MyThrowProcessor());
    }
  }
;
}
