{
  if (endpointUri == null) {
    config=null;
    return;
  }
  try {
    if (component != null) {
      config=component.createConfiguration(endpointUri);
    }
 else {
      MappedEndpointConfiguration cfg=new MappedEndpointConfiguration(null);
      cfg.setURI(new URI(endpointUri));
      config=cfg;
    }
  }
 catch (  Exception e) {
    throw new RuntimeCamelException(e);
  }
}
