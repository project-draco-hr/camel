{
  return new RouteBuilder(){
    @Override public void configure() throws Exception {
      from("netty4-http:http://0.0.0.0:{{port}}/foo").choice().when().xpath("/person/name = 'Claus'").transform(constant("<quote>Camel rocks</quote>")).when().xpath("/person/name = 'James'").transform(constant("<quote>Camel really rocks</quote>")).otherwise().transform(constant("<quote>Try Camel now</quote>"));
    }
  }
;
}
